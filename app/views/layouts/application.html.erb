<!DOCTYPE html>
<html>
  <head>
    <title>LordOfTheGram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <% if logged_in?%>
        <script id="bootstrap-current-user" type="text/javascript">
            window.currentUser = <%= render("api/users/user.json.jbuilder", user: current_user).html_safe%>
        </script>
    <% end %>

    <%= javascript_pack_tag 'LOTG' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
